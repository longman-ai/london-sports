// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Core Group Model - Enhanced with moderation
model Group {
  id          String   @id @default(cuid())

  // Core fields (existing structure)
  sport       String
  borough     String
  name        String
  venue       String
  area        String
  level       String
  description String   @db.Text
  contact     String
  sourceUrl   String
  isVenue     Boolean  @default(false)

  // Moderation workflow
  status      GroupStatus @default(PENDING)
  sourceType  SourceType

  // Submission metadata
  submittedBy    String?
  submittedAt    DateTime @default(now())
  reviewedBy     String?
  reviewedAt     DateTime?
  rejectionReason String? @db.Text

  // Data quality
  isActive       Boolean  @default(true)
  lastVerified   DateTime?
  verifiedBy     String?

  // Scraper metadata
  scrapedAt      DateTime?
  scraperVersion String?
  externalId     String?  @unique

  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([sport, borough, status])
  @@index([status])
  @@index([sourceType])
  @@index([externalId])
}

// Moderation status
enum GroupStatus {
  PENDING      // User submission awaiting review
  APPROVED     // Published to site
  REJECTED     // Declined
  NEEDS_REVIEW // Auto-scraped, needs verification
  ARCHIVED     // No longer active
}

// How the group was added
enum SourceType {
  USER_SUBMISSION
  MANUAL_ENTRY
  MEETUP_SCRAPER
  FACEBOOK_SCRAPER
  BULK_IMPORT
}

// Admin user model
model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  role      AdminRole @default(MODERATOR)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum AdminRole {
  SUPER_ADMIN  // Full access
  MODERATOR    // Can approve/reject
  VIEWER       // Read-only
}

// Scraper run logs
model ScraperRun {
  id            String   @id @default(cuid())
  scraperType   String
  status        String
  startedAt     DateTime @default(now())
  completedAt   DateTime?
  groupsFound   Int      @default(0)
  groupsCreated Int      @default(0)
  errors        Json?
  metadata      Json?

  @@index([scraperType, status])
}

// Audit log for tracking changes
model AuditLog {
  id        String   @id @default(cuid())
  action    String   // 'create' | 'update' | 'approve' | 'reject' | 'delete'
  entity    String   // 'group' | 'admin'
  entityId  String
  userId    String
  changes   Json?
  timestamp DateTime @default(now())

  @@index([entity, entityId])
  @@index([userId])
}
