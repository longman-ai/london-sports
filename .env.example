# Database (Prisma Postgres)
# Get these from Vercel Storage after creating a Postgres database
DATABASE_URL="postgres://..."
POSTGRES_URL="postgres://..."
POSTGRES_URL_NON_POOLING="postgres://..."
POSTGRES_PRISMA_URL="prisma+postgres://..."
PRISMA_DATABASE_URL="prisma+postgres://..."

# NextAuth
# Production URL - update this to your Vercel deployment URL
NEXTAUTH_URL="https://your-app.vercel.app"
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-here"

# Google OAuth (Get from Google Cloud Console)
# https://console.cloud.google.com/apis/credentials
AUTH_GOOGLE_ID="your-google-client-id.apps.googleusercontent.com"
AUTH_GOOGLE_SECRET="your-google-client-secret"

# Optional: Restrict admin login to specific email domain
ALLOWED_EMAIL_DOMAIN="@yourdomain.com"

# Admin Emails (comma-separated)
# These users will be able to log in to the admin panel
ADMIN_EMAILS="admin@example.com,moderator@example.com"

# Meetup API (Optional - for scraping)
# Get OAuth access token from https://www.meetup.com/api/oauth/list/
MEETUP_ACCESS_TOKEN="your-meetup-access-token"

# Facebook Graph API (Optional - for scraping)
# Note: Facebook Groups API was deprecated April 2024 - uses Places Search API
# Create an app at https://developers.facebook.com/
# Generate a User Access Token with pages_read_engagement permission
FACEBOOK_ACCESS_TOKEN="your-facebook-access-token"

# Google Custom Search API (Optional - for scraping)
# 1. Create a Custom Search Engine at https://programmablesearchengine.google.com/
# 2. Enable Custom Search API at https://console.cloud.google.com/apis/library/customsearch.googleapis.com
# 3. Create an API key at https://console.cloud.google.com/apis/credentials
# Note: Free tier allows 100 queries/day
GOOGLE_API_KEY="your-google-api-key"
GOOGLE_SEARCH_ENGINE_ID="your-search-engine-id"
